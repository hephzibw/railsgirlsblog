<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @blogpost.title %>
</p>

<p>
  <b>Content:</b>
  <%= @blogpost.content %>
</p>

<h3>Comments</h3>
<% @blogpost.comments.each do |comment| %>
    <div>
      <strong><%= comment.user_name %></strong>
      <br />
      <p><%= comment.body %><p>
    </div>
<% end %>
<%= render 'comments/form' %>




<%= link_to 'Edit', edit_blogpost_path(@blogpost) %> |
<%= link_to 'Back', blogposts_path %>
